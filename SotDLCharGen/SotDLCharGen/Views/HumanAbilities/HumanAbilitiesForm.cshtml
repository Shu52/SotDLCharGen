@model SotDLCharGen.ViewModels.HumanAbilitiesViewModel

@{
    ViewData["Title"] = "HumanAbilities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>HumanAbilities</h2>

<h4>HumanAbilitiesViewModel</h4>
<hr />
                <h3 class=" center-block">Please Select Only Two Attributes to Increase by One</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>

            <div class="form-group">
                <div>
                    <label for="Strength">Strength:</label>
                    <input id="strength" type="number" name="Strength" value="10" min="10" max="11" />
                </div>
                <div>
                    <label for="Agility">Agility:</label>
                    <input id="agility" type="number" name="Agility" value="10" min="10" max="11" />
                </div>
                <div>
                    <label for="Intellect">Intellect:</label>
                    <input id="intellect" type="number" name="Intellect" value="10" min="10" max="11" />
                </div>
                <div>
                    <label for="Will">Will:</label>
                    <input id="will" type="number" name="Will" value="10" min="10" max="11" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-controller="ApplicationUser" asp-action="UserHome">Back to List</a>
</div>

