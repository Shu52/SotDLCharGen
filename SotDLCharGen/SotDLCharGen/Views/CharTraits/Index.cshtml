@model IEnumerable<SotDLCharGen.Models.CharTrait>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CharTraitValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trait)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CharTraitValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Character.CharacterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trait.TraitId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CharTraitId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CharTraitId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CharTraitId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
